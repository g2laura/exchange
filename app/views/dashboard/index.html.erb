
<% if user_signed_in? %>
  <h2>Users</h2>
  <ul>
    <% @users.each do |user| %>
      <li>
        <%= link_to user.name, new_message_path(user) %>
        <%= " speaks #{user.profile.native_language}, want to learn #{user.profile.learning_language}"%>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>Login and prepare to do some language exchange!</p>
<% end %>